		String[] ss=bloggetmember(listg.get(0).get("managemember"));
		int a=0;
        for(int i=0;i<ss.length;i++)
        {
        	if(ss[i].equals(listperson.get(0).get("num")))
        	{
        		a=1;break;
        	}
        }
        if(a==1)
        {
        	sss=bloggetmember(listg.get(0).get("managemember"));
